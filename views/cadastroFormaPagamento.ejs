<%- include ('partials/header.ejs', {data: 'listaFormaPagto' }) %>
<body>
    <%- include ('partials/navbar.ejs', {data: 'listaFormaPagto' }) %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Cadastro de formas de pagamento</h3>    
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarFormaPagamento">
                    <label>Opção Parcela</label>
                    <input type="number" placeholder="Digite a Opção da Parcela ex. 1" class="form-control" name="opcaoParcela">
                    <label>Descrição da Forma de Pagamento</label>
                    <input type="text" placeholder="Digite a forma de Pagamento..." class="form-control" name="descricao">
                    <label>Desconto</label>
                    <input type="number" placeholder="Digite o valor do desconto" class="form-control" name="desconto">
                    <br>
                    <button class="btn btn-success">Salvar</button>        
                </form>
            </div>
        </div>
    </div>
    
</body>
<%- include ('partials/footer.ejs') %>
<%- include ('partials/scripts.ejs') %>
<style>
    body{
        background-color: #eceff1;
    }
</style>
