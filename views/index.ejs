<%- include ('partials/header.ejs', {data: 'index' }) %>
<body>
<%- include ('partials/navbar.ejs', {data: 'index' }) %>
    <div class="container">        
        <div class="card">
            <div class="card-header">
                <h3>Pagamento</h3>                    
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarPagamento">
                    <label>Valor Produto</label>
                    <input type="number" placeholder="Digite o Valor à pagar" class="form-control" Id="preco" name="preco">
                    <label>Forma Pagamento</label>
                    <input type="text" placeholder="Selecione a forma de Pagamento" class="form-control" list="listaFormaPagto" Id="formaPagamento" name="formaPagamento" oninput="calculaDesconto()">
                    <datalist Id="listaFormaPagto">
                        <option value="À vista dinheiro/cheque"></option>
                        <option value="À vista cartão"></option>
                        <option value="2x no cartão"></option>
                        <option value="3x ou mais no cartão">o</option>
                    </datalist>
                    <label>Desconto</label>
                    <input type="number" placeholder="Valor do Desconto" class="form-control" id="desconto" name="desconto" readonly>
                    <label>Valor Total Compra</label>
                    <input type="number" placeholder="Valor da compra com Desconto" class="form-control" name="valorTotalCompra" id='valorTotalCompra'readonly>
                    <br>
                    <button class="btn btn-success">Pagar</button>
                </form>                
            </div>
        </div>            
    </div>    
</body>
<%- include ('partials/footer.ejs') %>
<%- include ('partials/scripts.ejs') %>