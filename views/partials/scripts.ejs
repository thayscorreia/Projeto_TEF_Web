<script>
    function calculaDesconto(){
        var preco = parseInt(document.getElementById("preco").value)
        var formaPagamento = document.getElementById("formaPagamento").value
        var valorDesconto = document.getElementById("desconto").value
        var valorTotalCompra = document.getElementById("valorTotalCompra").value

        var desconto
        
        if(formaPagamento == "À vista diheiro/cheque"){
            desconto = 10
        }else if (formaPagamento == "À vista cartão"){
            desconto = 5
        }else if (formaPagamento == "2x no cartão"){
            desconto = 0
        }else if (formaPagamento == "3x ou mais no cartão"){
            desconto = 0
        }
        document.getElementById("desconto").value = desconto
